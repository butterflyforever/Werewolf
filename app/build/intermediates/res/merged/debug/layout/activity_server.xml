        android:textOff="2die"
        android:checked="true"
        android:backgroundTint="#FFFF00"
        android:layout_alignTop="@+id/togglebutton_p1"
        android:layout_toRightOf="@+id/togglebutton_p1"
        android:layout_toEndOf="@+id/togglebutton_p1" />
    <ToggleButton
        android:id="@+id/togglebutton_p3"
